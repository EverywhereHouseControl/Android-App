<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/livingRoomMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center"
    android:orientation="vertical"
    tools:context=".PlacesMenu" >
    
		<ScrollView 
                android:id="@+id/svLivingRoomMenu"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:gravity="top|bottom|left|right|center"
    			android:paddingBottom="@dimen/activity_vertical_margin"
    			android:paddingLeft="@dimen/activity_horizontal_margin"
    			android:paddingRight="@dimen/activity_horizontal_margin"
    			android:paddingTop="@dimen/activity_vertical_margin"
    			android:background="@android:color/white" >
    	    	
        			<LinearLayout
            			android:id="@+id/linearLivingRoomMenu"
            			android:layout_width="382dp"
            			android:layout_height="wrap_content"
            			android:layout_marginLeft="-16dp"
            			android:orientation="vertical" >

            			<RelativeLayout
                			android:layout_width="wrap_content"
                			android:layout_height="150dp"
                			android:layout_marginLeft="-4dp"
                			android:orientation="horizontal" >

                			<TextView
                    			android:id="@+id/textLivingRoom"
                    			android:layout_width="120dp"
                    			android:layout_height="90dp"
                    			android:layout_marginBottom="50dp"
                    			android:layout_marginLeft="130dp"
                    			android:layout_marginRight="10dp"
                    			android:layout_marginTop="60dp"
                    			android:text="SalÃ³n"
                    			android:textSize="35sp" />

                			<ImageView
                    			android:id="@+id/lrNext"
                    			android:layout_width="50dp"
                    			android:layout_height="50dp"
                    			android:layout_alignBottom="@+id/textLivingRoom"
                    			android:layout_alignParentRight="true"
                    			android:layout_marginRight="14dp"
                    			android:layout_marginTop="0dp"
                    			android:src="@drawable/next_arrow" />

            			</RelativeLayout>

            			<GridLayout
                			android:id="@+id/gridLayoutLR"
                			android:layout_width="280dp"
                			android:layout_height="fill_parent"
                			android:layout_marginLeft="50dp"
                			android:layout_marginTop="10dp"
                			android:columnCount="4"
                			android:columnWidth="120dp"
                			android:rowCount="4" >

                			<ImageButton
                    			android:id="@+id/buttonAirLR"
                    			android:layout_width="130dp"
                    			android:layout_height="90dp"
                    			android:layout_column="0"
                    			android:layout_gravity="left"
                    			android:layout_marginBottom="10dp"
                    			android:layout_row="2"
                    			android:background="@android:color/darker_gray"
                    			android:src="@drawable/air_conditioning" />

                			<ImageButton
                    			android:id="@+id/buttonRadiatorLR"
                    			android:layout_width="130dp"
                    			android:layout_height="90dp"
                    			android:layout_column="1"
                    			android:layout_gravity="right"
                    			android:layout_marginBottom="10dp"
                    			android:layout_row="1"
                    			android:background="@android:color/darker_gray"
                    			android:src="@drawable/radiator" />

                			<Button
                    			android:id="@+id/LR1"
                    			android:layout_width="130dp"
                    			android:layout_height="90dp"
                    			android:layout_column="1"
                    			android:layout_gravity="right"
                    			android:layout_marginBottom="10dp"
                    			android:layout_row="2"
                    			android:text="" />

                			<ImageButton
                    			android:id="@+id/buttonStereoLR"
                    			android:layout_width="130dp"
                    			android:layout_height="90dp"
                    			android:layout_column="0"
                    			android:layout_gravity="left"
                    			android:layout_marginBottom="10dp"
                    			android:layout_row="1"
                    			android:background="@android:color/darker_gray"
                    			android:src="@drawable/stereo" />

                			<ImageButton
                    			android:id="@+id/buttonLightLR"
                    			android:layout_width="130dp"
                    			android:layout_height="90dp"
                    			android:layout_column="0"
                    			android:layout_gravity="left"
                    			android:layout_marginBottom="10dp"
                    			android:layout_row="0"
                    			android:background="@android:color/darker_gray"
                    			android:src="@drawable/light" />

                			<Button
                    			android:id="@+id/LR2"
                    			android:layout_width="130dp"
                    			android:layout_height="90dp"
                    			android:layout_column="0"
                    			android:layout_gravity="left"
                    			android:layout_marginBottom="10dp"
                    			android:layout_row="3"
                    			android:text="" />

                			<ImageButton
                    			android:id="@+id/buttonTvLR"
                    			android:layout_width="130dp"
                    			android:layout_height="90dp"
                    			android:layout_column="1"
                    			android:layout_gravity="right"
                    			android:layout_marginBottom="10dp"
                    			android:layout_marginLeft="20dp"
                    			android:layout_row="0"
                    			android:background="@android:color/darker_gray"
                    			android:src="@drawable/tv" />
            			</GridLayout>
        			</LinearLayout>
				</ScrollView>
</LinearLayout>
