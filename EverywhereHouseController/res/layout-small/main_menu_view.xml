<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="top|bottom|left|right|center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainMenu" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <ImageView
                android:id="@+id/world_loading_view"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/world_ehc" />

            <ImageView
                android:id="@+id/word_ehc"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_alignLeft="@+id/world_loading_view"
                android:layout_alignTop="@+id/world_loading_view"
                android:src="@drawable/word_ehc" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="188dp" >

            <Button
                android:id="@+id/buttonWorks"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/buttonManagement"
                android:layout_alignBottom="@+id/buttonManagement"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_config"
                android:text="Tasks"
                android:textColor="@drawable/button_text_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonProfile"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_config"
                android:text="Profile"
                android:textColor="@drawable/button_text_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonManagement"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_config"
                android:text="Management"
                android:textColor="@drawable/button_text_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonConfig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/button_config"
                android:text="Configuration"
                android:textColor="@drawable/button_text_color"
                android:textSize="20sp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>