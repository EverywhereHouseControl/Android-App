<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="top|bottom|left|right|center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ManagementMenu" >
    	    	
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageWorldManagementMenu"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/world_ehc" />

                <ImageView
                    android:id="@+id/imageWordManagementMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_alignLeft="@+id/imageWorldManagementMenu"
                    android:layout_alignParentRight="true"
                    android:layout_weight="0.12"
                    android:src="@drawable/word_ehc" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeContentTables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TableLayout
                    android:id="@+id/genericTable2"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="40dp" >

                </TableLayout>

                <TableLayout
                    android:id="@+id/table1"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="0.12" >

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/genericButton"
                            android:layout_width="130dp"
                            android:layout_height="80dp"
                            android:layout_marginBottom="10dp"
                            android:height="70dp"
                            android:text="HabitaciÃ³n"
                            android:width="100dp" />
                    </TableRow>
                </TableLayout>

            </RelativeLayout>

        </LinearLayout>

</ScrollView>