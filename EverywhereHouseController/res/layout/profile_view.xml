<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 android:id="@+id/drawer_layout"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent" >
	 
	<RelativeLayout
	    android:id="@+id/RelativeLayout2"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@color/GreenApp" >

	    <ImageView
	        android:id="@+id/UserImage"
	        android:layout_width="120dp"
	        android:layout_height="120dp"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="43dp"
	        android:src="@drawable/user_icon" />
	    
	<ImageButton
            android:id="@+id/imageOverflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/GreenApp"
            android:src="@drawable/ic_action_overflow" />
	<ImageButton
            android:id="@+id/lateralMenu"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_drawer"
            android:background="@color/GreenApp" />

		    <CheckBox
		        android:id="@+id/checkBoxProfileImage"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/lateralMenu"
		        android:layout_toRightOf="@+id/UserImage"/>

		    <EditText
		        android:id="@+id/profilePassword"
		        android:layout_width="160dp"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/textView3"
		        android:layout_alignLeft="@+id/profileEmail"
		        android:ems="10"
		        android:inputType="textPassword"
		        android:singleLine="true"
		        android:textColor="@color/Black"
		        android:textSize="20sp" >

		        <requestFocus />
		    </EditText>

		    <TextView
		        android:id="@+id/textView3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_above="@+id/profileSave"
		        android:layout_marginBottom="46dp"
		        android:layout_marginRight="18dp"
		        android:layout_toLeftOf="@+id/profilePassword"
		        android:text="Password"
		        android:textColor="@color/White"
		        android:textSize="20sp" />

		    <TextView
		        android:id="@+id/textView2"
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:layout_above="@+id/profilePassword"
		        android:layout_alignLeft="@+id/textMessage"
		        android:layout_marginBottom="20dp"
		        android:text="E-mail"
		        android:textColor="@color/White"
		        android:textSize="20sp" />

		    <EditText
		        android:id="@+id/profileUser"
		        android:layout_width="160dp"
		        android:layout_height="wrap_content"
		        android:layout_above="@+id/profileEmail"
		        android:layout_alignRight="@+id/imageOverflow"
		        android:layout_marginBottom="32dp"
		        android:ems="10"
		        android:singleLine="true"
		        android:textColor="@color/Black"
		        android:textSize="20sp" />

		    <TextView
		        android:id="@+id/textMessage"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/profileUser"
		        android:layout_alignLeft="@+id/textView3"
		        android:text="User"
		        android:textColor="@color/White"
		        android:textSize="20sp" />

		    <EditText
		        android:id="@+id/profileEmail"
		        android:layout_width="160dp"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/textView2"
		        android:layout_alignLeft="@+id/profileUser"
		        android:ems="10"
		        android:singleLine="true"
		        android:textColor="@color/Black"
		        android:textSize="20sp" />

		    <Button
		        android:id="@+id/profileSave"
		        android:layout_width="140dp"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:layout_alignParentBottom="true"
		        android:layout_alignParentRight="true"
		        android:background="@drawable/button_config"
		        android:onClick="onClickButton"
		        android:layout_marginRight="10dp"
		        android:text="Save"
		        android:textColor="@drawable/button_text_color2" />

		    <Button
		        android:id="@+id/profileExit"
		        android:layout_width="140dp"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
		        android:layout_alignParentLeft="true"
		        android:background="@drawable/button_config"
		        android:layout_marginLeft="10dp"
		        android:onClick="onClickButton"
		        android:text="Exit"
		        android:textColor="@drawable/button_text_color2"
		        android:textSize="20sp" />

	</RelativeLayout>

	<ListView
	    android:id="@+id/ListViewSlidingMenu"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="left"
	    android:background="@color/GreenApp" />
 
</android.support.v4.widget.DrawerLayout>
