<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 android:id="@+id/drawer_layout"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent" >
	 
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/White"
	    android:gravity="top|bottom|left|right|center"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin" >

	    <LinearLayout
	        android:id="@+id/linearLayout1"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:orientation="vertical" >
	
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="199dp" >
	
	            <ImageView
	                android:id="@+id/world_loading_view"
	                android:layout_width="200dp"
	                android:layout_height="120dp"
	                android:layout_centerHorizontal="true"
	                android:layout_marginTop="25dp"
	                android:src="@drawable/world_ehc" />
	
	            <ImageView
	                android:id="@+id/word_ehc"
	                android:layout_width="200dp"
	                android:layout_height="120dp"
	                android:layout_centerHorizontal="true"
	                android:layout_marginTop="30dp"
	                android:src="@drawable/word_ehc" />

	            <ImageView
	                android:id="@+id/imageView1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentTop="true"
	                android:src="@drawable/ic_drawer" />
	
	        </RelativeLayout>
	
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent" >
	
	            <Button
	                android:id="@+id/buttonProfile"
	                android:layout_width="wrap_content"
	                android:layout_height="70dp"
	                android:layout_alignLeft="@+id/buttonEvents"
	                android:layout_alignParentRight="true"
	                android:layout_alignTop="@+id/buttonConfig"
	                android:background="@drawable/button_config2"
	                android:text="Profile"
	                android:textColor="@drawable/button_text_color3"
	                android:textSize="20sp" />
	
	            <Button
	                android:id="@+id/buttonEvents"
	                android:layout_width="wrap_content"
	                android:layout_height="70dp"
	                android:layout_alignBaseline="@+id/buttonManagement"
	                android:layout_alignBottom="@+id/buttonManagement"
	                android:layout_alignParentRight="true"
	                android:layout_marginLeft="28dp"
	                android:layout_toRightOf="@+id/buttonManagement"
	                android:background="@drawable/button_config2"
	                android:text="Tasks"
	                android:textColor="@drawable/button_text_color3"
	                android:textSize="20sp" />
	
	            <Button
	                android:id="@+id/buttonManagement"
	                android:layout_width="wrap_content"
	                android:layout_height="70dp"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentTop="true"
	                android:layout_marginTop="72dp"
	                android:background="@drawable/button_config2"
	                android:text="Management"
	                android:textColor="@drawable/button_text_color3"
	                android:textSize="20sp" />
	
	            <Button
	                android:id="@+id/buttonConfig"
	                android:layout_width="wrap_content"
	                android:layout_height="70dp"
	                android:layout_alignParentLeft="true"
	                android:layout_below="@+id/buttonManagement"
	                android:layout_marginTop="18dp"
	                android:background="@drawable/button_config2"
	                android:text="Configuration"
	                android:textColor="@drawable/button_text_color3"
	                android:textSize="20sp" />
	
	        </RelativeLayout>
	
	    </LinearLayout>

	</RelativeLayout>

	<ListView
	    android:id="@+id/ListViewSlidingMenu"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="left"
	    android:background="@color/GreenApp" />
 
</android.support.v4.widget.DrawerLayout>
