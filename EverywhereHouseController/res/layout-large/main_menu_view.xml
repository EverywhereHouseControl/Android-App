<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 android:id="@+id/drawer_layout"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent" >
	 
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/White"
	    android:gravity="top|bottom|left|right|center"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin" >
		    
	    <LinearLayout
	        android:id="@+id/linearLayout1"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:orientation="vertical" >

	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="359dp" >

	            <ImageView
	                android:id="@+id/world_loading_view"
	                android:layout_width="300dp"
	                android:layout_height="180dp"
	                android:layout_centerHorizontal="true"
	                android:layout_marginTop="25dp"
	                android:src="@drawable/world_ehc" />

	            <ImageView
	                android:id="@+id/word_ehc"
	                android:layout_width="300dp"
	                android:layout_height="180dp"
	                android:layout_centerHorizontal="true"
	                android:layout_marginTop="30dp"
	                android:src="@drawable/word_ehc" />

	            <ImageView
	                android:id="@+id/WeatherImage1"
	                android:layout_width="120dp"
	                android:layout_height="120dp"
	                android:layout_alignRight="@+id/WeatherImage3"
	                android:layout_alignTop="@+id/word_ehc"
	                android:layout_marginRight="27dp"
	                android:layout_marginTop="39dp" />

	            <ImageView
	                android:id="@+id/WeatherImage2"
	                android:layout_width="120dp"
	                android:layout_height="120dp"
	                android:layout_alignParentRight="true"
	                android:layout_alignTop="@+id/WeatherImage1"
	                android:layout_marginRight="44dp" />

	            <TextView
	                android:id="@+id/temperature"
	                android:layout_width="140dp"
	                android:layout_height="100dp"
	                android:layout_alignBottom="@+id/WeatherImage3"
	                android:layout_alignTop="@+id/WeatherImage3"
	                android:layout_toLeftOf="@+id/WeatherImage4"
	                android:text="ÂºC"
	                android:textColor="@color/GreenApp"
	                android:textSize="60sp" />

	            <ImageView
	                android:id="@+id/WeatherImage3"
	                android:layout_width="100dp"
	                android:layout_height="100dp"
	                android:layout_below="@+id/word_ehc"
	                android:layout_marginRight="60dp"
	                android:layout_toLeftOf="@+id/temperature" />

	            <ImageView
	                android:id="@+id/WeatherImage5"
	                android:layout_width="90dp"
	                android:layout_height="90dp"
	                android:layout_alignRight="@+id/WeatherImage3"
	                android:layout_alignTop="@+id/WeatherImage4" />

	            <ImageView
	                android:id="@+id/WeatherImage4"
	                android:layout_width="90dp"
	                android:layout_height="90dp"
	                android:layout_alignBottom="@+id/world_loading_view"
	                android:layout_alignLeft="@+id/WeatherImage2"
	                android:layout_marginBottom="25dp" />

	        </RelativeLayout>

	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="30dp" >

	            <Button
	                android:id="@+id/buttonManagement"
	                android:layout_width="wrap_content"
	                android:layout_height="80dp"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentRight="true"
	                android:layout_alignParentTop="true"
	                android:background="@drawable/button_config2"
	                android:text="Management"
	                android:textColor="@drawable/button_text_color3"
	                android:textSize="40sp" />

	            <Button
	                android:id="@+id/buttonConfig"
	                android:layout_width="wrap_content"
	                android:layout_height="80dp"
	                android:layout_alignParentBottom="true"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentRight="true"
	                android:background="@drawable/button_config2"
	                android:text="Configuration"
	                android:textColor="@drawable/button_text_color3"
	                android:textSize="40sp" />

	            <Button
	                android:id="@+id/buttonEvents"
	                android:layout_width="240dp"
	                android:layout_height="80dp"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:background="@drawable/button_config2"
	                android:text="Tasks"
	                android:textColor="@drawable/button_text_color3"
	                android:textSize="40sp" />

	        </RelativeLayout>
	    </LinearLayout>

	</RelativeLayout>

	<ListView
	    android:id="@+id/ListViewSlidingMenu"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="left"
	    android:background="@color/GreenApp" />
 
</android.support.v4.widget.DrawerLayout>
