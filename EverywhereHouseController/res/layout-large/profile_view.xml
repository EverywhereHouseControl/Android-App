<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:src="@drawable/user_icon" />

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:textColor="@color/Black"
        android:layout_marginRight="20dp"
        android:layout_marginTop="61dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:text="User"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:textColor="@color/Black"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="50dp"
        android:text="Password"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textMessage"
        android:textColor="@color/Black"
        android:layout_below="@+id/textMessage"
        android:layout_marginTop="50dp"
        android:text="E-mail"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/profileUser"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/profileEmail"
        android:layout_alignRight="@+id/profileExit"
        android:ems="10"
        android:singleLine="true"
        android:textColor="@color/DarkGray"
        android:textSize="25sp" />

    <Button
        android:id="@+id/profileSave"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/textMessage"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="82dp"
        android:background="@drawable/button_config"
        android:text="Save"
        android:textColor="@drawable/button_text_color"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/profilePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profileSave"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignRight="@+id/profileExit"
        android:ems="10"
        android:inputType="textPassword"
        android:password="true"
        android:singleLine="true"
        android:textColor="@color/DarkGray"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/profileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/profilePassword"
        android:layout_alignRight="@+id/profileExit"
        android:ems="10"
        android:singleLine="true"
        android:textColor="@color/DarkGray"
        android:textSize="25sp" />

    <Button
        android:id="@+id/profileExit"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/profileSave"
        android:layout_alignBottom="@+id/profileSave"
        android:layout_toRightOf="@+id/imageView1"
        android:background="@drawable/button_config"
        android:text="Exit"
        android:textColor="@drawable/button_text_color"
        android:textSize="25sp" />

</RelativeLayout>
