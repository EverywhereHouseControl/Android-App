            </intent-filter>
        </activity>
        <activity
            android:name="ehc.net.CaldroidSampleActivity"
            android:theme="@style/Theme.Sherlock.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.CaldroidSampleActivity" />
